{
  "name": "glow-mui3",
  "version": "0.2.0",
  "description": "A collection of React UI and utility components adapted from Google's Material Design 3",
  "keywords": [
    "react",
    "react-components",
    "component-kit",
    "material-design",
    "glow-mui3"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TazDeCoder/glow-mui3.git"
  },
  "license": "MIT",
  "author": "Tarwat Uddin",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build-storybook": "build-storybook",
    "commit": "cz",
    "deploy-storybook": "storybook-to-ghpages",
    "postinstall": "husky install",
    "lint": "eslint . --ignore-path .gitignore --ext ts,tsx --quiet",
    "release": "yarn release-it",
    "size": "size-limit",
    "start": "tsup --watch",
    "storybook": "start-storybook -p 6006",
    "test": "jest --coverage --passWithNoTests",
    "test:ci": "yarn test --ci --maxWorkers 2",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "resolutions": {
    "glob-parent": "^6.0.0",
    "parse-url": "^8.1.0",
    "trim": "^1.0.0",
    "trim-newlines": "^4.0.0"
  },
  "dependencies": {
    "@emotion/react": "11.10.5",
    "@fontsource/roboto": "4.5.8",
    "@theme-ui/color-modes": "0.15.4",
    "@theme-ui/core": "0.15.4",
    "@theme-ui/css": "0.15.4",
    "polished": "4.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@emotion/jest": "11.10.5",
    "@release-it/conventional-changelog": "5.1.1",
    "@ryansonshine/commitizen": "4.2.8",
    "@ryansonshine/cz-conventional-changelog": "3.3.4",
    "@size-limit/preset-big-lib": "8.1.1",
    "@size-limit/webpack-css": "8.1.1",
    "@storybook/addon-a11y": "6.5.15",
    "@storybook/addon-essentials": "6.5.15",
    "@storybook/addon-interactions": "6.5.15",
    "@storybook/addon-links": "6.5.15",
    "@storybook/addons": "6.5.15",
    "@storybook/builder-webpack5": "6.5.15",
    "@storybook/manager-webpack5": "6.5.15",
    "@storybook/react": "6.5.15",
    "@storybook/storybook-deployer": "2.8.16",
    "@storybook/theming": "6.5.15",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "babel-loader": "9.1.2",
    "eslint": "8.31.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "2.27.4",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.6.10",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "8.0.3",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "lint-staged": "13.1.0",
    "prettier": "2.8.2",
    "release-it": "15.6.0",
    "size-limit": "8.1.1",
    "storybook-dark-mode": "2.0.5",
    "ts-jest": "29.0.5",
    "tsup": "6.5.0",
    "typescript": "4.9.4"
  },
  "peerDependencies": {
    "@emotion/react": "^11",
    "react": "^17 || ^18",
    "react-dom": "^17 || ^18",
    "theme-ui": "^0.15"
  },
  "packageManager": "yarn@3.3.1",
  "engines": {
    "node": ">=18.12.1"
  },
  "size-limit": [
    {
      "name": "The execution time to load the whole entire library",
      "path": "dist/index.js",
      "limit": "600 ms"
    }
  ],
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "treeshake": true,
    "sourcemap": true,
    "minify": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "format": [
      "cjs",
      "esm"
    ]
  }
}
