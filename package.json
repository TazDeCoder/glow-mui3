{
  "name": "glow-mui3",
  "version": "0.2.3",
  "description": "A collection of React UI and utility components adapted from Google's Material Design 3",
  "keywords": [
    "react",
    "react-components",
    "component-kit",
    "material-design",
    "glow-mui3"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TazDeCoder/glow-mui3.git"
  },
  "license": "MIT",
  "author": "Tarwat Uddin",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build-storybook": "build-storybook",
    "commit": "cz",
    "deploy-storybook": "storybook-to-ghpages",
    "postinstall": "husky install",
    "lint": "eslint . --ignore-path .gitignore --ext ts,tsx --quiet",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "release": "yarn release-it",
    "size": "size-limit",
    "start": "tsup --watch",
    "storybook": "start-storybook -p 6006",
    "test": "jest --coverage --passWithNoTests",
    "test:ci": "yarn test --ci --maxWorkers 2",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "resolutions": {
    "glob-parent": "^6.0.0",
    "parse-url": "^8.1.0",
    "trim": "^1.0.0",
    "trim-newlines": "^5.0.0"
  },
  "dependencies": {
    "@emotion/react": "11.11.1",
    "@fontsource/roboto": "4.5.8",
    "@theme-ui/color-modes": "0.16.0",
    "@theme-ui/core": "0.16.0",
    "@theme-ui/css": "0.16.0",
    "polished": "4.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.22.10",
    "@commitlint/cli": "17.6.7",
    "@commitlint/config-conventional": "17.6.7",
    "@emotion/jest": "11.11.0",
    "@release-it/conventional-changelog": "5.1.1",
    "@ryansonshine/commitizen": "4.2.8",
    "@ryansonshine/cz-conventional-changelog": "3.3.4",
    "@size-limit/preset-big-lib": "8.2.6",
    "@size-limit/webpack-css": "8.2.6",
    "@storybook/addon-a11y": "6.5.16",
    "@storybook/addon-essentials": "6.5.16",
    "@storybook/addon-interactions": "6.5.16",
    "@storybook/addon-links": "6.5.16",
    "@storybook/addons": "6.5.16",
    "@storybook/builder-webpack5": "6.5.16",
    "@storybook/manager-webpack5": "6.5.16",
    "@storybook/react": "6.5.16",
    "@storybook/storybook-deployer": "2.8.16",
    "@storybook/theming": "6.5.16",
    "@testing-library/jest-dom": "5.17.0",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/jest": "29.5.3",
    "@types/node": "18.17.3",
    "@types/react": "18.2.19",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "babel-loader": "9.1.3",
    "eslint": "8.46.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.33.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.6.13",
    "eslint-plugin-unused-imports": "3.0.0",
    "husky": "8.0.3",
    "jest": "29.6.2",
    "jest-environment-jsdom": "29.6.2",
    "lint-staged": "13.2.3",
    "pinst": "^3.0.0",
    "prettier": "2.8.8",
    "release-it": "15.11.0",
    "size-limit": "8.2.6",
    "storybook-dark-mode": "2.1.1",
    "ts-jest": "29.1.1",
    "tsup": "6.7.0",
    "typescript": "5.1.6"
  },
  "peerDependencies": {
    "@emotion/react": "^11",
    "react": "^17 || ^18",
    "react-dom": "^17 || ^18",
    "theme-ui": "^0.15 || ^0.16.0"
  },
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": ">=18.12.1"
  },
  "size-limit": [
    {
      "name": "The execution time to load the whole entire library",
      "path": "dist/index.js",
      "limit": "700 ms"
    }
  ],
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "treeshake": true,
    "sourcemap": true,
    "minify": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "format": [
      "cjs",
      "esm"
    ]
  }
}
